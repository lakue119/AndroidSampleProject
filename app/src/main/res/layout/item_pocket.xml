<?xml version="1.0" encoding="utf-8"?>
<layout
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.lakue.androidsampleproject.remote.model.ResultPocket" />
        <variable
            name="vm"
            type="com.lakue.androidsampleproject.ui.main.MainViewModel" />
        <variable
            name="keyword"
            type="String" />
    </data>

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/color_dark_000000_ffffff"
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:bufferType="spannable"
            android:textSize="15dp"
            android:textColor="@color/color_dark_ffffff_000000"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>
</layout>
